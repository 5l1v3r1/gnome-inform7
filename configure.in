dnl Process this file with autoconf to produce a configure script.

AC_INIT(configure.in)
AM_INIT_AUTOMAKE(gnome-inform7, 0.2)
AM_MAINTAINER_MODE
AM_CONFIG_HEADER(config.h)

AC_ISC_POSIX
AC_PROG_CC
AM_PROG_CC_STDC
AC_HEADER_STDC

pkg_modules="gtk+-2.0 libgnomeui-2.0 libgtkhtml-3.8 gtksourceview-1.0 gtkspell-2.0 libxml-2.0 ossp-uuid vte" 
PKG_CHECK_MODULES(PACKAGE, [$pkg_modules])
AC_SUBST(PACKAGE_CFLAGS)
AC_SUBST(PACKAGE_LIBS)

dnl Add user c-flags
CFLAGS=$CFLAGS

dnl Check for the correct UUID library header location
AC_CHECK_HEADER(ossp/uuid.h,
	AC_DEFINE([OSSP_UUID], [], [Define if the OSSP UUID header is <ossp/uuid.h>
	instead of <uuid.h>]), [])

GETTEXT_PACKAGE=gnome-inform7
AC_SUBST(GETTEXT_PACKAGE)
AC_DEFINE_UNQUOTED(GETTEXT_PACKAGE,"$GETTEXT_PACKAGE", [Gettext package.])

dnl Add the languages which your application supports here.
ALL_LINGUAS=""
AM_GLIB_GNU_GETTEXT

AC_CONFIG_COMMANDS_PRE([pushd src/inform; ./configure --prefix=$prefix; popd])

AC_OUTPUT([
Makefile
src/Makefile
src/cblorb/Makefile
src/glulxe/Makefile
po/Makefile.in
data/Makefile
data/doc/Makefile
data/doc/doc_images/Makefile
data/doc/gnome/Makefile
data/doc/licenses/Makefile
data/doc/map_icons/Makefile
data/doc/scene_icons/Makefile
data/doc/sections/Makefile
data/extensions/Makefile
data/extensions/EmilyShort/Makefile
data/extensions/GrahamNelson/Makefile
data/extensions/Reserved/Makefile
data/extensions/Reserved/Templates/Makefile
data/lib/Makefile
data/lib/Natural/Makefile
])
