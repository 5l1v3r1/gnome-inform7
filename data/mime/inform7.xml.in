<?xml version="1.0" encoding="utf-8"?>
<mime-info xmlns="http://www.freedesktop.org/standards/shared-mime-info">

  <mime-type type="application/x-inform">
    <_comment>Inform 7 project</_comment>
    <glob pattern="*.inform"/>
  </mime-type>

  <mime-type type="application/x-inform-materials">
    <_comment>Inform 7 project Materials folder</_comment>
    <glob pattern="*.materials"/>
  </mime-type>

  <mime-type type="application/x-inform-skein+xml">
    <sub-class-of type="application/xml"/>
    <_comment>Inform 7 Skein file</_comment>
    <glob pattern="*.skein"/>
  </mime-type>

  <mime-type type="text/x-inform">
    <_comment>Inform 6 source code</_comment>
    <glob pattern="*.inf"/>
    <glob pattern="*.i6"/>
  </mime-type>

  <mime-type type="text/x-natural-inform">
    <_comment>Natural Inform source code</_comment>
    <glob pattern="*.ni"/>
    <glob pattern="*.i7"/>
  </mime-type>

  <mime-type type="text/x-natural-inform-extension">
    <_comment>Inform 7 extension file</_comment>
    <glob pattern="*.i7x"/>
  </mime-type>

  <mime-type type="text/x-blurb">
    <_comment>Blurb contents file</_comment>
    <glob pattern="*.blurb"/>
  </mime-type>

</mime-info>
