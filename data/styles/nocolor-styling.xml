<style-scheme id="nocolor-styling" _name="Styling often, Change colours never" 
version="1.0">
    <author>Zachary Amsden</author>
    <_description>*, Often, Never</_description>

    <!-- GtkSourceView appearance styles-->
    <style name="text"              />
    <style name="bracket-match"     bold="true"/>
    <style name="bracket-mismatch"  bold="true"/>
    
    <!-- Search Matching (not used) -->
    <style name="search-match"      />  

    <!-- I7 core types -->
    <style name="inform7:string"    bold="true"/>
    <style name="inform7:markup"    bold="false" italic="true"/>
    <style name="inform7:comment"   italic="true"/>
    <style name="inform7:heading"   bold="true"/>

    <!-- I6 core types -->
    <style name="inform:keyword"    italic="true"/>
    <style name="inform:function"   italic="true"/>
    <style name="inform:comment"    italic="true"/>
    <style name="inform:escape"     bold="true"/>
    <style name="inform:assembly"   bold="true"/>
    <style name="inform:property"   bold="true"/>
<!--
    <style name="inform7:keyword"   bold="true"/>
    <style name="inform7:boolean"   />
-->
    <!-- Others -->
    <style name="def:error"           bold="true"/>
    <style name="def:note"            bold="true"/>
    <style name="def:underlined"      italic="true" underline="true"/>

</style-scheme>
